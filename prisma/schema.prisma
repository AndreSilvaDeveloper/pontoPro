generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Empresa {
  id        String    @id @default(cuid())
  nome      String
  cnpj      String?
  usuarios  Usuario[]
  criadoEm  DateTime  @default(now())
}

model Usuario {
  id            String   @id @default(cuid())
  nome          String
  email         String   @unique
  senha         String   
  
  // Biometria e Regras
  fotoPerfilUrl String?  
  jornada       Json?    
  
  // Controle
  cargo         String   @default("FUNCIONARIO")
  deveTrocarSenha Boolean @default(false)
  
  // Vínculo
  empresaId     String?  
  empresa       Empresa? @relation(fields: [empresaId], references: [id])

  // Geofencing
  latitudeBase  Float    @default(0)
  longitudeBase Float    @default(0)
  raioPermitido Int      @default(100) 

  pontos        Ponto[]
  
  // CORREÇÃO 1: Adicionado o campo oposto da relação
  solicitacoes  SolicitacaoAjuste[] 

  criadoEm      DateTime @default(now())
}

model Ponto {
  id        String   @id @default(cuid())
  dataHora  DateTime @default(now())
  latitude  Float
  longitude Float
  endereco  String?
  fotoUrl   String?
  tipo      String   @default("NORMAL")
  
  usuarioId String
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])

  // CORREÇÃO 2: Adicionado o campo oposto da relação
  solicitacoes SolicitacaoAjuste[]
}

model SolicitacaoAjuste {
  id          String   @id @default(cuid())
  novoHorario DateTime
  motivo      String
  status      String   @default("PENDENTE") // PENDENTE, APROVADO, REJEITADO
  
  usuarioId   String
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  
  pontoId     String
  ponto       Ponto    @relation(fields: [pontoId], references: [id], onDelete: Cascade)

  criadoEm    DateTime @default(now())
}